@model SH.Models.Appliances

@{
    ViewData["Title"] = "Appliances";

}

<center><h3>Add Appliance Please!</h3></center>

@if (ViewBag.Message != null)
{
    @if (ViewBag.Message == "Successfully Saved")
    {
        <div class="alert alert-success" id="myDiv"> <span class="glyphicon glyphicon-user"></span><h4>@ViewBag.Message</h4> </div>
    }

    else
    {
        <div class="alert alert-danger"> <span class="glyphicon glyphicon-user"></span><h4>@ViewBag.Message</h4> </div>
    }
}







<form asp-action="Appliances">
    <div class="form-horizontal">

        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>




        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label "></label>
            <div class="col-md-10">


 
                <select name="appliances" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" required>
                    <option value="">Select Appliance Please</option>
                    <option value="Fan">Fan</option>
                    <option value="Bulb">Bulb</option>
                    <option value="AC">AC</option>
                    <option value="TV">TV</option>
                </select>

                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>




        <div class="form-group">
            <label asp-for="Switch_No" class="col-md-2 control-label "></label>
            <div class="col-md-10">



                <select name="switchno" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" required>
                    <option value="">Select Switch No Please</option>
                    <option value="3">3</option>
                    <option value="12">12</option>
                    <option value="5">5</option>
                    <option value="14">14</option>
                    <option value="4">4</option>
                </select>

                <span asp-validation-for="Switch_No" class="text-danger" />
            </div>
        </div>




        <div class="form-group">

            <div class="col-md-10" hidden>
                <input asp-for="Status" class="form-control" value="OFF" />
                <span asp-validation-for="Status" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Voltages" class="col-md-2 control-label">Watts</label>
            <div class="col-md-10">
                <input asp-for="Voltages" class="form-control" type="number" />
                <span asp-validation-for="Voltages" class="text-danger" />
            </div>
        </div>

        @if (ViewBag.id != null)
        {
            <input type="hidden" name="rid" value="@ViewBag.id" />
        }


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add appliances" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>

<br />
<br />
&nbsp;&nbsp;<br />
<center>
    <div>
        <a asp-action="dashoboard" class="btn btn-info"><span class="fa fa-arrow-left"> Back to Dashboard</span></a>
    </div>
</center>
@section Scripts {
    <script>

        $("#myDiv").fadeOut(4000);

    </script>

}
