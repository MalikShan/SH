@model IEnumerable<SH.Models.Room>

@{
    ViewData["Title"] = "Showrooms";

}


@if (ViewBag.msg != null || ViewBag.msg2 != null || ViewBag.msg3 != null || ViewBag.msg4 != null)
{
    @if (ViewBag.msg2 == "Appliance already entered please select another one")
    {
        <div class="alert alert-danger" id="myDiv"> <span class="glyphicon glyphicon-user"></span><h4>@ViewBag.msg2</h4> </div>
    }

    @if(ViewBag.msg == "Successfully Saved")
    {
        <div class="alert alert-success" id="myDiv"> <span class="glyphicon glyphicon-user"></span><h4>@ViewBag.msg</h4> </div>
    }
    @if(ViewBag.msg3 == "Successfully deleted")
    {

        <div class="alert alert-danger" id="myDiv"> <span class="glyphicon glyphicon-user"></span><h4>@ViewBag.msg3</h4> </div>
    }
    @if (ViewBag.msg4 == "Switch already in use select other one please")
    {

        <div class="alert alert-danger" id="myDiv"> <span class="glyphicon glyphicon-user"></span><h4>@ViewBag.msg4</h4> </div>
    }
}

<center><h3>All Rooms</h3></center>


<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfAppliances)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <strong> @Html.DisplayFor(modelItem => item.Name)</strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfAppliances)
                </td>

             
           
           
                <td>
                    <a href="/Home/Appliances?roomid=@item.Id" class="btn btn-info" data-toggle="tooltip" title="Add new Appliance"><i class="fa fa-plus-circle  fa-2x" aria-hidden="true"></i></a>
                    <a href="/Home/ShowAppliances?roomid=@item.Id" class="btn btn-info" data-toggle="tooltip" title="Show all Appliances"><i class="fa fa-lightbulb-o fa-2x" aria-hidden="true"></i></a>
                </td>
            
           

            </tr>

        }
       
    </tbody>
</table>

&nbsp;&nbsp;<br />
<center>
    <div>
        <a asp-action="dashoboard" class="btn btn-info"><span class="fa fa-arrow-left"> Back to Dashboard</span></a>
    </div>
</center>
@section scripts{
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })


 



        $("#myDiv").fadeOut(4000);



    </script>






}